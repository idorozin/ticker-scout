// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["ticker_scout"]
}

model Company {
  id                    Int      @id @default(autoincrement())
  exchange              String
  symbol                String   @unique
  shortName             String
  longName              String
  sector                String
  industry              String
  currentPrice          Float?
  marketCap             Float?
  ebitda                Float?
  revenueGrowth         Float?
  city                  String?
  state                 String?
  country               String?
  fullTimeEmployees     Int?
  longBusinessSummary   String?
  weight                Float?
  // For SQLite: store as BLOB, for PostgreSQL: store as BLOB (vector extension handled separately)
  embedding             Bytes?
  embeddingGenerated    Boolean  @default(false)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@map("companies")
  @@schema("ticker_scout")
} 